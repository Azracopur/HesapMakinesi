<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:gravity="end"
        android:padding="8dp"/>
    <EditText
        android:id="@+id/sayigoster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:ems="10"
        android:gravity="right"
        android:inputType="text"
        android:onClick="btnsayiekle"
        android:paddingTop="20dp"
        android:paddingBottom="80dp"
        android:text="0"
        android:textColor="@color/white" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnsil"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#817D7D"
                android:text="AC"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnekart"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#817D7D"
                android:onClick="btnsayiekle"
                android:text="+/-"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnyuzde"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#817D7D"
                android:text="%"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnbol"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#D58D12"
                android:text="/"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#373636"
                android:onClick="btnsayiekle"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#373636"
                android:onClick="btnsayiekle"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#373636"
                android:onClick="btnsayiekle"
                android:text="9" />

            <Button
                android:id="@+id/btncarp"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#D58D12"
                android:text="X"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#373636"
                android:onClick="btnsayiekle"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#373636"
                android:onClick="btnsayiekle"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#373636"
                android:onClick="btnsayiekle"
                android:text="6" />

            <Button
                android:id="@+id/btncikar"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#D58D12"
                android:text="-"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="30dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#373636"
                android:onClick="btnsayiekle"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#373636"
                android:onClick="btnsayiekle"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#373636"
                android:onClick="btnsayiekle"
                android:text="3" />

            <Button
                android:id="@+id/btntopla"
                android:layout_width="10dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#D58D12"
                android:text="+"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#373636"
                android:onClick="btnsayiekle"
                android:text="0" />

            <Button
                android:id="@+id/btnvirgul"
                android:layout_width="10dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#373636"
                android:text=","
                android:textSize="30dp"
                android:textColor="#070707" />

            <Button
                android:id="@+id/btnnokta"
                android:layout_width="10dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#373636"
                android:text="."
                android:textSize="30dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnesit"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:backgroundTint="#D58D12"
                android:text="="
                android:textColor="@color/black" />
        </TableRow>
    </TableLayout>
</LinearLayout>